<!DOCTYPE html>
<html>
  <head>
  <meta charset='utf-8'>
  <title>Madlib Select</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>

  @if(@Model.Random == 1)
  {
    <h1>Fill out the form to create a unique story about Denmark.</h1>
    <form action="/madlibgame" method="post">
      <label for="noun">Enter a noun.</label>
      <input type="text" name="noun" id="noun">
      <label for="adjective">Enter an adjective.</label>
      <input type="text" name="adjective" id="adjective">
      <label for="exclamation">Enter an exclamation.</label>
      <input type="text" name="exclamation" id="exclamation">
      <label for="verb">Enter a verb.</label>
      <input type="text" name="verb" id="verb">
      <button type="submit">Submit</button>
    </form>
  }
  else if (@Model.Random == 2)
  {
    <h1>Something about Uzbekistan.</h1>
    <form action="/madlibgametwo" method="post">
      <label for="noun">Enter a noun.</label>
      <input type="text" name="noun" id="noun">
      <label for="nounTwo">Enter another noun.</label>
      <input type="text" name="nounTwo" id="nounTwo">
      <label for="adjective">Enter an adjective.</label>
      <input type="text" name="adjective" id="adjective">
      <label for="exclamation">Enter an exclamation.</label>
      <input type="text" name="exclamation" id="exclamation">
      <label for="verb">Enter a verb.</label>
      <input type="text" name="verb" id="verb">
      <label for="verbTwo">Enter another verb.</label>
      <input type="text" name="verbTwo" id="verbTwo">
      <label for="verbThree">Enter a third verb.</label>
      <input type="text" name="verbThree" id="verbThree">
      <button type="submit">Submit</button>
    </form>
  }
  else if (@Model.Random == 3)
  {
    <h1>Something about Space.</h1>
    <form action="/madlibgamethree" method="post">
      <label for="noun">Enter a noun.</label>
      <input type="text" name="noun" id="noun">
      <label for="nounTwo">Enter another noun.</label>
      <input type="text" name="nounTwo" id="nounTwo">
      <label for="adjective">Enter an adjective.</label>
      <input type="text" name="adjective" id="adjective">
      <label for="adjectiveTwo">Enter an adjective.</label>
      <input type="text" name="adjectiveTwo" id="adjectiveTwo">
      <label for="exclamation">Enter an exclamation.</label>
      <input type="text" name="exclamation" id="exclamation">
      <label for="exclamationTwo">Enter an exclamation.</label>
      <input type="text" name="exclamationTwo" id="exclamationTwo">
      <label for="verb">Enter a verb.</label>
      <input type="text" name="verb" id="verb">
      <label for="verbTwo">Enter another verb.</label>
      <input type="text" name="verbTwo" id="verbTwo">
      <label for="verbThree">Enter a third verb.</label>
      <input type="text" name="verbThree" id="verbThree">
      <button type="submit">Submit</button>
    </form>
  }

  </body>
<html>